<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/backgroundImage"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/account_bg"
        android:scaleType="centerCrop"
        android:alpha="0.5"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Toolbar with Pencil Icon -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/accountToolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        app:title="Profile Information"
        app:titleTextColor="@android:color/white"
        app:layout_constraintTop_toTopOf="parent">

        <ImageButton
            android:id="@+id/editButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/edit"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Edit Account"
            android:layout_gravity="end|center_vertical"
            android:layout_marginEnd="16dp"
            app:tint="@android:color/white" />
    </androidx.appcompat.widget.Toolbar>

    <!-- ScrollView containing fields and checkboxes -->
    <ScrollView
        android:id="@+id/myScrollView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/accountToolbar"
        app:layout_constraintBottom_toTopOf="@id/logoutButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- EditText fields -->
            <EditText
                android:id="@+id/editTextFirstName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="First Name"
                android:enabled="false"
                android:textColor="@android:color/black"
                android:layout_marginBottom="16dp" />

            <EditText
                android:id="@+id/editTextLastName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Last Name"
                android:enabled="false"
                android:textColor="@android:color/black"
                android:layout_marginBottom="16dp" />

            <EditText
                android:id="@+id/editTextEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Email"
                android:enabled="false"
                android:textColor="@android:color/black"
                android:layout_marginBottom="16dp" />

            <EditText
                android:id="@+id/editTextAge"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Age"
                android:enabled="false"
                android:textColor="@android:color/black"
                android:inputType="number"
                android:layout_marginBottom="16dp" />

            <EditText
                android:id="@+id/editTextGender"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Gender"
                android:enabled="false"
                android:textColor="@android:color/black"
                android:layout_marginBottom="16dp" />

            <EditText
                android:id="@+id/editTextOccupation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Occupation"
                android:enabled="false"
                android:textColor="@android:color/black"
                android:layout_marginBottom="16dp" />

            <TextView
                android:id="@+id/updateTopic"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Update Topic"
                android:textColor="@color/white"
                android:background="?attr/colorPrimary"/>

            <!-- Checkboxes -->

            <CheckBox
                android:id="@+id/checkComputerScience"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/cs" />

            <CheckBox
                android:id="@+id/checkBiology"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/bio" />

            <CheckBox
                android:id="@+id/checkChemistry"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/chem"
                android:textColor="#333333"
                android:textSize="16sp" />

            <CheckBox
                android:id="@+id/checkMathematics"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/maths"
                android:textColor="#333333"
                android:textSize="16sp" />

            <CheckBox
                android:id="@+id/checkEngineering"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/engineering"
                android:textColor="#333333"
                android:textSize="16sp" />

            <CheckBox
                android:id="@+id/checkPhysics"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/phy"
                android:textColor="#333333"
                android:textSize="16sp" />

            <CheckBox
                android:id="@+id/checkEnglish"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/eng"
                android:textColor="#333333"
                android:textSize="16sp" />

            <CheckBox
                android:id="@+id/checkHistory"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/history"
                android:textColor="#333333"
                android:textSize="16sp" />

            <CheckBox
                android:id="@+id/checkPhilosophy"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/philosophy"
                android:textColor="#333333"
                android:textSize="16sp" />

            <CheckBox
                android:id="@+id/checkFrench"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/french"
                android:textColor="#333333"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/updateDifficulty"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Update Difficulty"
                android:textColor="@color/white"
                android:background="?attr/colorPrimary"/>

            <RadioGroup
                android:id="@+id/radioGroupDifficulty"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="30dp"
                android:orientation="vertical">

                <RadioButton
                    android:id="@+id/radioEasy"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/easy"
                    android:textColor="#333333"
                    android:textSize="16sp" />

                <RadioButton
                    android:id="@+id/radioMedium"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/medium"
                    android:textColor="#333333"
                    android:textSize="16sp" />

                <RadioButton
                    android:id="@+id/radioHard"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/hard"
                    android:textColor="#333333"
                    android:textSize="16sp" />
            </RadioGroup>

            <TextView
                android:id="@+id/updateTime"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Update Study Time"
                android:textColor="@color/white"
                android:background="?attr/colorPrimary"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="@string/weekdays"
                android:textColor="#333333"
                android:textSize="16sp" />

            <CheckBox
                android:id="@+id/checkWeekdayMorning"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/weekday_morning"
                android:textColor="#333333"
                android:textSize="16sp" />

            <CheckBox
                android:id="@+id/checkWeekdayAfternoon"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/weekday_afternoon"
                android:textColor="#333333"
                android:textSize="16sp" />

            <CheckBox
                android:id="@+id/checkWeekdayEvening"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/weekday_evening"
                android:textColor="#333333"
                android:textSize="16sp" />

            <!-- Weekend Study Time -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="@string/weekend"
                android:textColor="#333333"
                android:textSize="16sp" />

            <CheckBox
                android:id="@+id/checkWeekendMorning"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/weekend_morning"
                android:textColor="#333333"
                android:textSize="16sp" />

            <CheckBox
                android:id="@+id/checkWeekendAfternoon"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/weekend_afternoon"
                android:textColor="#333333"
                android:textSize="16sp" />

            <CheckBox
                android:id="@+id/checkWeekendEvening"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/weekday_evening"
                android:textColor="#333333"
                android:textSize="16sp" />

        </LinearLayout>
    </ScrollView>

    <!-- Logout Button -->
    <Button
        android:id="@+id/logoutButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Logout"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="16dp" />

</androidx.constraintlayout.widget.ConstraintLayout>

